<%- include('./partials/student/header') %>

    <div class="p-8 max-w-4xl mx-auto">

        <!-- Assignment Header Card -->
        <div class="bg-white shadow-md rounded-xl p-6 border border-gray-200">

            <h2 class="text-3xl font-bold mb-4 text-gray-800">
                <%= assignment.title %>
            </h2>

            <div class="space-y-2">

                <p><strong class="text-gray-700">Category:</strong>
                    <span class="text-gray-800">
                        <%= assignment.category %>
                    </span>
                </p>

                <p><strong class="text-gray-700">Status:</strong>
                    <% if (assignment.status==="approved" ) { %>
                        <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-semibold">
                            Approved
                        </span>
                        <% } else if (assignment.status==="submitted" ) { %>
                            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold">
                                Submitted
                            </span>
                            <% } else if (assignment.status==="rejected" ) { %>
                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-semibold">
                                    Rejected
                                </span>
                                <% } else { %>
                                    <span
                                        class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                        Draft
                                    </span>
                                    <% } %>
                </p>

                <p><strong class="text-gray-700">Date:</strong>
                    <span class="text-gray-800">
                        <%= assignment.createdAt.toDateString() %>
                    </span>
                </p>

                <p><strong class="text-gray-700">Reviewer:</strong>
                    <span class="text-gray-800">
                        <%= assignment.reviewerId ? assignment.reviewerId.name : "Not Assigned" %>
                    </span>
                </p>

            </div>

            <div class="mt-4">
                <strong class="text-gray-700">Description:</strong>
                <p class="text-gray-700 mt-1">
                    <%= assignment.description %>
                </p>
            </div>

            <div class="mt-4">
                <a href="/student/assignments/<%= assignment._id %>/download"
                    class="text-indigo-600 underline hover:text-indigo-800 font-medium">
                    Download File
                </a>
            </div>

            <div class="mt-6">
                <a href="/student/assignments"
                    class="px-4 py-2 bg-gray-700 text-white rounded hover:bg-black transition shadow">
                    Back to Assignments
                </a>
            </div>

        </div>


        <!-- Submit for Review (ONLY for Draft) -->
        <% if (assignment.status==="draft" ) { %>
            <div class="bg-white shadow-md rounded-xl p-6 border mt-6">

                <h3 class="text-xl font-semibold text-gray-800 mb-2">Submit for Review</h3>

                <form action="/student/assignments/<%= assignment._id %>/submit" method="POST">

                    <label class="font-semibold">Select Professor:</label>
                    <select name="reviewerId" required class="p-3 border rounded-lg w-full mt-2 mb-3 bg-white shadow-sm focus:ring-2 
                           focus:ring-indigo-500 transition">
                        <% professors.forEach(p=> { %>
                            <option value="<%= p._id %>">
                                <%= p.name %> â€” <%= p.department %>
                            </option>
                            <% }) %>
                    </select>

                    <button type="submit"
                        onclick="return confirm('Submit this assignment for review? You cannot edit after this.')"
                        class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition shadow">
                        Submit for Review
                    </button>

                </form>

            </div>
            <% } %>
                <% if (assignment.status==="rejected" ) { %>
                    <div class="bg-white shadow-md rounded-xl p-6 border mt-6">

                        <h3 class="text-xl font-semibold text-red-700 mb-3">Resubmit Assignment</h3>

                        <p class="text-gray-600 mb-2">
                            <strong>Rejection Remarks:</strong>
                            <span class="italic">
                                <%= assignment.rejectionRemark || "No remarks provided" %>
                            </span>
                        </p>

                        <form action="/student/assignments/<%= assignment._id %>/resubmit" method="POST"
                            enctype="multipart/form-data">

                            <label class="font-semibold">Upload New File (optional)</label>
                            <input type="file" name="file" accept="application/pdf"
                                class="p-2 border rounded w-full mt-2 mb-3">

                            <label class="font-semibold">Update Description (optional)</label>
                            <textarea name="description" rows="3"
                                class="p-3 border rounded w-full mt-2 mb-3"><%= assignment.description %></textarea>

                            <button type="submit" onclick="return confirm('Resubmit this assignment?')"
                                class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition shadow">
                                Resubmit
                            </button>

                        </form>

                    </div>
                    <% } %>


                        <!-- Approval History -->
                        <h3 class="text-2xl font-bold text-gray-800 mt-10 mb-4">Approval History</h3>

                        <div class="bg-white rounded-xl shadow p-6 border border-gray-200">

                            <% if (assignment.history.length===0) { %>
                                <p class="text-gray-500 italic">No history available yet.</p>
                                <% } %>

                                    <% assignment.history.forEach(h=> { %>
                                        <div class="mb-6 pb-6 border-b border-gray-200">

                                            <p class="font-bold text-gray-900 text-lg capitalize">
                                                <%= h.action %>
                                            </p>

                                            <% if (h.reviewerId) { %>
                                                <p class="text-gray-700 text-sm">
                                                    by <%= h.reviewerId.name %>
                                                        (<%= h.reviewerId.department %>)
                                                </p>
                                                <% } %>

                                                    <p class="text-gray-500 text-sm">
                                                        <%= h.date.toDateString() %>
                                                    </p>

                                                    <% if (h.remark) { %>
                                                        <p class="mt-2 text-gray-700 italic">
                                                            "<%= h.remark %>"
                                                        </p>
                                                        <% } %>

                                                            <% if (h.signature) { %>
                                                                <p class="text-gray-500 text-sm mt-1">
                                                                    Signature: <%= h.signature %>
                                                                </p>
                                                                <% } %>

                                        </div>
                                        <% }) %>

                        </div>

    </div>

    <%- include('./partials/student/footer') %>