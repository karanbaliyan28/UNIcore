<%- include('../partials/professor/header') %>

  <div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-7xl mx-auto">

      <!-- Status Cards -->
      <div class="grid grid-cols-2 md:grid-cols-5 gap-3 mb-6">

        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-blue-500 hover:shadow-lg transition">
          <p class="text-gray-600 font-medium text-xs mb-1">Pending Review</p>
          <h3 class="text-2xl font-bold text-blue-600">
            <%= pending %>
          </h3>
        </div>

        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-green-500 hover:shadow-lg transition">
          <p class="text-gray-600 font-medium text-xs mb-1">Approved</p>
          <h3 class="text-2xl font-bold text-green-600">
            <%= approved %>
          </h3>
        </div>

        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-purple-500 hover:shadow-lg transition">
          <p class="text-gray-600 font-medium text-xs mb-1">Forwarded</p>
          <h3 class="text-2xl font-bold text-purple-600">
            <%= forwarded %>
          </h3>
        </div>

        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-red-500 hover:shadow-lg transition">
          <p class="text-gray-600 font-medium text-xs mb-1">Rejected</p>
          <h3 class="text-2xl font-bold text-red-600">
            <%= rejected %>
          </h3>
        </div>

        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-gray-500 hover:shadow-lg transition">
          <p class="text-gray-600 font-medium text-xs mb-1">Total Reviewed</p>
          <h3 class="text-2xl font-bold text-gray-700">
            <%= totalReviewed %>
          </h3>
        </div>

      </div>

      <!-- Filters -->
      <div class="bg-white shadow-md rounded-xl p-6 mb-6">
        <form id="professorFilterForm" method="GET" action="/professor/dashboard"
          class="grid grid-cols-1 md:grid-cols-4 gap-4">

          <div class="md:col-span-2">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Search by Student or Title</label>
            <input id="profSearch" type="text" name="search" value="<%= searchQuery || '' %>"
              placeholder="Type to search..."
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
            <select id="profStatus" name="status"
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="all" <%=statusFilter==='all' ? 'selected' : '' %>>All</option>
              <option value="submitted" <%=statusFilter==='submitted' ? 'selected' : '' %>>Pending Review</option>
              <option value="approved" <%=statusFilter==='approved' ? 'selected' : '' %>>Approved</option>
              <option value="forwarded" <%=statusFilter==='forwarded' ? 'selected' : '' %>>Forwarded</option>
              <option value="rejected" <%=statusFilter==='rejected' ? 'selected' : '' %>>Rejected</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Sort By</label>
            <select id="profSort" name="sort"
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="newest" <%=sortBy==='newest' ? 'selected' : '' %>>Newest</option>
              <option value="oldest" <%=sortBy==='oldest' ? 'selected' : '' %>>Oldest</option>
              <option value="title" <%=sortBy==='title' ? 'selected' : '' %>>Title (A‚ÄìZ)</option>
            </select>
          </div>

        </form>
      </div>

      <!-- Table -->
      <div class="bg-white shadow-md rounded-xl overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h3 class="text-xl font-semibold text-gray-900">Assignment Queue</h3>
        </div>

        <table class="min-w-full text-left">
          <thead class="bg-gray-100 border-b">
            <tr>
              <th class="p-3 font-semibold text-gray-700">Student</th>
              <th class="p-3 font-semibold text-gray-700">Title</th>
              <th class="p-3 font-semibold text-gray-700">Status</th>
              <th class="p-3 font-semibold text-gray-700">Submitted</th>
              <th class="p-3 font-semibold text-gray-700">Days Pending</th>
              <th class="p-3 font-semibold text-gray-700 text-center">Action</th>
            </tr>
          </thead>

          <tbody>
            <% if (assignments.length===0) { %>
              <tr>
                <td colspan="6" class="p-8 text-center text-gray-500">
                  No assignments found with the current filters.
                </td>
              </tr>
              <% } else { %>
                <% assignments.forEach(a=> { %>
                  <tr class="border-b hover:bg-gray-50 transition">

                    <td class="p-3 text-gray-800 font-medium">
                      <%= a.name %>
                    </td>

                    <td class="p-3">
                      <span class="font-medium text-gray-900">
                        <%= a.title %>
                      </span>
                      <% if (a.history && a.history.some(h=> h.action === 'resubmitted')) { %>
                        <span class="ml-2 px-2 py-1 text-xs bg-purple-100 text-purple-700 rounded-full font-semibold">
                          üîÑ Resubmitted
                        </span>
                        <% } %>
                    </td>

                    <td class="p-3">
                      <% if (a.status==='submitted' ) { %>
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                          üìù Pending
                        </span>
                        <% } else if (a.status==='approved' ) { %>
                          <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                            ‚úÖ Approved
                          </span>
                          <% } else if (a.status==='forwarded' ) { %>
                            <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">
                              üì§ Forwarded
                            </span>
                            <% } else if (a.status==='rejected' ) { %>
                              <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-medium">
                                ‚ùå Rejected
                              </span>
                              <% } else if (a.status==='draft' ) { %>
                                <span class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-medium">
                                  üìÑ Draft
                                </span>
                                <% } %>
                    </td>

                    <td class="p-3 text-gray-600">
                      <%= a.createdAt.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' })
                        %>
                    </td>

                    <td class="p-3">
                      <% const daysPassed=Math.floor((Date.now() - a.createdAt) / (1000 * 60 * 60 * 24)); const
                        daysLeft=Math.max(0, deadlineDays - daysPassed); let colorClass="text-green-600" ; if (daysLeft
                        <=7 && daysLeft> 4) colorClass = "text-yellow-600";
                        if (daysLeft <= 4 && daysLeft> 0) colorClass = "text-orange-600";
                          if (daysLeft === 0) colorClass = "text-red-600 font-bold";

                          // Helper to format completion date
                          const formattedDate = new Date(a.updatedAt).toLocaleDateString("en-US", {
                          month: "short",
                          day: "numeric",
                          year: "numeric"
                          });
                          %>

                          <% if (a.status==="approved" ) { %>
                            <span class="text-green-700 font-semibold">‚úî Approved on <%= formattedDate %></span>

                            <% } else if (a.status==="rejected" ) { %>
                              <span class="text-red-700 font-semibold">‚úñ Rejected on <%= formattedDate %></span>

                              <% } else if (a.status==="forwarded" ) { %>
                                <span class="text-purple-700 font-semibold">üì§ Forwarded on <%= formattedDate %></span>

                                <% } else { %>
                                  <!-- Default Days Left -->
                                  <span class="<%= colorClass %>">
                                    <%= daysLeft===0 ? "Overdue" : daysLeft + " days left" %>
                                  </span>
                                  <% } %>

                    </td>


                    <td class="p-3 align-middle">

                      <div class="flex items-center justify-start w-40 mx-auto gap-3">

                        <% if (a.status==="submitted" ) { %>
                          <!-- Review Action (Primary) -->
                          <a href="/professor/review/<%= a._id %>"
                            class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-sm font-medium rounded-lg shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                              </path>
                            </svg>
                            Review
                          </a>
                          <% } else { %>

                            <!-- Details Action (Fixed Width to ensure alignment) -->
                            <a href="/professor/details/<%= a._id %>"
                              class="inline-flex items-center justify-center w-24 py-2 bg-white border border-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:border-indigo-300 hover:text-indigo-600 hover:bg-indigo-50 transition-colors duration-200 shadow-sm">
                              Details
                            </a>

                            <!-- Forward Action (Appears next to Details without pushing it) -->
                            <% if (a.status==="approved" ) { %>
                              <a href="/professor/details/<%= a._id %>#forward-section"
                                class="group relative flex items-center justify-center w-10 h-10 bg-purple-50 text-purple-600 rounded-lg border border-purple-100 hover:bg-purple-600 hover:text-white hover:border-purple-600 transition-all duration-300 shadow-sm"
                                title="Forward to HOD">

                                <!-- Animated Arrow Icon -->
                                <svg
                                  class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-1"
                                  fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                              </a>
                              <% } %>

                                <% } %>
                      </div>
                    </td>

                  </tr>
                  <% }) %>
                    <% } %>
          </tbody>

        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages> 1) { %>
        <div class="flex justify-center gap-3 mt-6">
          <% if (page> 1) { %>
            <a href="?page=<%= page - 1 %>&status=<%= statusFilter %>&search=<%= searchQuery %>&sort=<%= sortBy %>"
              class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 transition font-medium">
              Previous
            </a>
            <% } %>

              <% for (let i=1; i <=totalPages; i++) { %>
                <a href="?page=<%= i %>&status=<%= statusFilter %>&search=<%= searchQuery %>&sort=<%= sortBy %>"
                  class="px-4 py-2 rounded-lg font-medium transition
                    <%= i === page ? 'bg-blue-600 text-white' : 'bg-white border border-gray-300 hover:bg-gray-100' %>">
                  <%= i %>
                </a>
                <% } %>

                  <% if (page < totalPages) { %>
                    <a href="?page=<%= page + 1 %>&status=<%= statusFilter %>&search=<%= searchQuery %>&sort=<%= sortBy %>"
                      class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 transition font-medium">
                      Next
                    </a>
                    <% } %>
        </div>
        <% } %>

    </div>
  </div>

  <script src="../../public/js/professor/dashboard.js"></script>
  <%- include('../partials/professor/footer') %>