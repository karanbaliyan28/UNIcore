<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Student Panel</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <!-- Student Navbar -->
    <nav class="bg-white border-b shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">

            <!-- Left Logo -->
            <a href="/student/dashboard" class="text-2xl font-bold text-indigo-600 tracking-tight">
                Student Portal
            </a>

            <!-- Menu -->
            <div class="flex items-center space-x-6">

                <a href="/student/dashboard" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                    Dashboard
                </a>

                <a href="/student/assignments" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                    My Assignments
                </a>

                <a href="/student/upload" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                    Upload
                </a>

                <a href="/student/bulk-upload" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                    Bulk Upload
                </a>

                <!-- Notifications -->
                <a href="/student/notifications"
                    class="relative flex items-center text-gray-700 hover:text-indigo-600 font-medium transition">

                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>

                    <% if (typeof unreadNotifications !=='undefined' && unreadNotifications> 0) { %>
                        <span
                            class="absolute -top-1 -right-2 bg-red-600 text-white text-xs font-bold rounded-full px-1.5 py-0.5 shadow">
                            <%= unreadNotifications %>
                        </span>
                        <% } %>

                </a>

                <!-- Logout -->
                <a href="/auth/logout"
                    class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow-sm transition">
                    Logout
                </a>

            </div>

        </div>
    </nav>

    <script>
        document.getElementById("mobileMenuBtn")
            .onclick = () => document.getElementById("mobileMenu").classList.toggle("hidden");
    </script>


    <!-- Page Content Container -->
    <div class="max-w-7xl mx-auto mt-6">