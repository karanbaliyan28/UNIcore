<%- include('../partials/professor/header') %>

    <div class="min-h-screen bg-gray-100 py-10">
        <div class="max-w-7xl mx-auto px-4">

            <!-- Back -->
            <div class="mb-6">
                <a href="/professor/dashboard"
                    class="inline-flex items-center text-indigo-600 hover:text-indigo-800 transition font-semibold">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Dashboard
                </a>
            </div>

            <!-- Assignment Summary Card -->
            <div class="bg-white shadow-md rounded-2xl p-6 mb-8 border-l-4 border-indigo-500">
                <h1 class="text-3xl font-bold text-gray-900 mb-6">Review Assignment</h1>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Student Card -->
                    <div class="flex items-center space-x-4">
                        <div
                            class="h-16 w-16 rounded-full bg-indigo-600 text-white flex items-center justify-center text-2xl font-bold shadow">
                            <%= assignment.studentId.name.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Student</p>
                            <p class="text-lg font-bold text-gray-900">
                                <%= assignment.studentId.name %>
                            </p>
                            <p class="text-sm text-gray-600">
                                <%= assignment.studentId.email %>
                            </p>
                        </div>
                    </div>

                    <!-- Submission Info -->
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Submitted On</p>
                            <p class="text-lg font-bold text-gray-900">
                                <%= assignment.createdAt.toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric'
                                    , month: 'long' , day: 'numeric' }) %>
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Days Pending</p>
                            <% const daysPending=Math.floor((Date.now() - assignment.createdAt) / (1000*60*60*24)); %>
                                <p class="text-lg font-bold <%= daysPending > 7 ? 'text-red-600' : 'text-gray-900' %>">
                                    <%= daysPending %> days
                                </p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Main Layout -->
            <div class="lg:grid lg:grid-cols-3 lg:gap-4">

                <!-- LEFT SIDE -->
                <div class="lg:col-span-2 space-y-4">

                    <!-- Assignment Details -->
                    <div class="bg-white rounded-xl shadow-md p-4">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">Assignment Details</h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Left: Title -->
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase">
                                    Title
                                </label>
                                <p class="text-lg text-gray-900 font-medium mt-1">
                                    <%= assignment.title %>
                                </p>
                            </div>

                            <!-- Right: Description -->
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase">
                                    Description
                                </label>
                                <p class="text-gray-700 mt-1 leading-relaxed">
                                    <%= assignment.description || 'No description provided.' %>
                                </p>
                            </div>
                        </div>
                    </div>


                    <!-- PDF VIEWER -->
                    <div class="bg-white rounded-2xl shadow-md p-6" style="height: 727px;">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-bold text-gray-900">Assignment Document</h2>

                            <% if (assignment.fileUrl) { %>
                                <a href="/uploads/<%= assignment.fileUrl %>" download
                                    class="px-4 py-2 bg-indigo-600 text-white text-xs font-medium rounded-lg hover:bg-indigo-700 transition flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 
                                      01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    Download PDF
                                </a>
                                <% } %>
                        </div>

                        <% if (assignment.fileUrl) { %>
                            <!-- FULL PREMIUM VIEWER -->
                            <div class="border rounded-xl bg-gray-50 shadow-inner overflow-hidden"
                                style="height: 580px;">
                                <iframe src="/uploads/<%= assignment.fileUrl %>#toolbar=1" class="w-full h-full"
                                    style="border:none;">
                                </iframe>
                            </div>

                            <div class="mt-4 text-center">
                                <a href="/uploads/<%= assignment.fileUrl %>" target="_blank"
                                    class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                    Open in New Tab ‚Üí
                                </a>
                            </div>
                            <% } else { %>
                                <p class="text-center py-12 text-gray-500">No file uploaded.</p>
                                <% } %>
                    </div>


                    <!-- HISTORY -->
                    <% if (assignment.history && assignment.history.length> 0) { %>
                        <div class="bg-white rounded-2xl shadow-md p-6">
                            <h2 class="text-xl font-bold text-gray-900 mb-4">Review History</h2>

                            <div class="space-y-4">
                                <% assignment.history.forEach(h=> { %>
                                    <div class="p-4 rounded-xl 
                                    <%= h.action === 'approved'
                                        ? 'bg-green-50 border-l-4 border-green-500'
                                        : 'bg-red-50 border-l-4 border-red-500' %>">

                                        <div class="flex justify-between items-center mb-1">
                                            <span class="font-semibold 
                                            <%= h.action === 'approved' ? 'text-green-700' : 'text-red-700' %>">
                                                <%= h.action.toUpperCase() %>
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                <%= new Date(h.date).toLocaleDateString() %>
                                            </span>
                                        </div>

                                        <p class="text-gray-700 text-sm mb-1">
                                            <%= h.remark %>
                                        </p>
                                        <p class="text-xs text-gray-500">‚Äî <%= h.signature %>
                                        </p>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>
                </div>


               
                <!-- RIGHT SIDE -  HOD Review Panel -->
<div class="mt-8 lg:mt-0 sticky top-6">
    <div class="bg-white rounded-2xl shadow-md p-6">

        <h2 class="text-xl font-bold text-gray-900 mb-6">Final Review</h2>

        <form action="/hod/assignments/<%= assignment._id %>/final-review" 
              method="POST" 
              enctype="multipart/form-data"
              id="hodReviewForm"
              class="space-y-6">

            <!-- Remarks -->
            <div>
                <label class="text-sm font-semibold text-gray-700 mb-2 block">
                    Final Remarks *
                </label>
                <textarea name="remark" required rows="5"
                    class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-indigo-500"></textarea>
                <p class="text-xs text-gray-500 mt-1">Minimum 10 characters</p>
            </div>

            <!-- Signature Type Selector -->
            <div>
                <label class="text-sm font-semibold text-gray-700 mb-2 block">Signature Method *</label>
                <div class="grid grid-cols-2 gap-3">
                    <button type="button" onclick="selectSignatureTypeHOD('text')" id="hodTextSigBtn"
                        class="signature-type-btn active px-4 py-3 border-2 border-indigo-500 bg-indigo-50 rounded-lg font-medium text-indigo-700 transition">
                        ‚úç Write Text
                    </button>

                    <button type="button" onclick="selectSignatureTypeHOD('image')" id="hodImageSigBtn"
                        class="signature-type-btn px-4 py-3 border-2 border-gray-300 bg-white rounded-lg font-medium text-gray-700 hover:border-indigo-300 transition">
                        üñº Upload Image
                    </button>
                </div>
            </div>

            <!-- Text Signature -->
            <div id="hodTextSignatureSection">
                <label class="text-sm font-semibold text-gray-700 mb-2 block">Your Signature (Text) *</label>

                <input name="signature" id="hodSignatureTextInput"
                    class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-indigo-500"
                    placeholder="Full name">

                <div class="mt-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <p class="text-xs text-gray-500 mb-2">Preview:</p>
                    <p id="hodSignaturePreview"
                        class="text-3xl text-indigo-800 transform -rotate-2 min-h-[40px]"
                        style="font-family: 'Great Vibes', cursive;">
                        Your signature will appear here
                    </p>
                </div>
            </div>

            <!-- Image Signature -->
            <div id="hodImageSignatureSection" style="display: none;">
                <label class="text-sm font-semibold text-gray-700 mb-2 block">Upload Signature Image *</label>

                <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-indigo-400 transition">
                    <input type="file" name="signatureImage" id="hodSignatureImageInput"
                        accept="image/png,image/jpeg,image/jpg"
                        class="hidden"
                        onchange="previewSignatureImageHOD(event)">
                    <label for="hodSignatureImageInput" class="cursor-pointer">
                        <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                        </svg>
                        <p class="text-sm text-gray-600 font-medium">Click to upload signature image</p>
                        <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 2MB</p>
                    </label>
                </div>

                <div id="hodImagePreviewContainer" class="mt-3 hidden">
                    <p class="text-xs text-gray-500 mb-2">Preview:</p>
                    <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 flex items-center justify-between">
                        <img id="hodSignatureImagePreview" class="h-16 max-w-[200px] object-contain">
                        <button type="button" onclick="clearSignatureImageHOD()"
                            class="text-red-600 hover:text-red-800 text-sm font-medium">
                            Remove
                        </button>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="space-y-3 border-t pt-4">
                <button type="submit" name="decision" value="approved"
                    class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition flex items-center justify-center">
                    ‚úî Final Approve
                </button>

                <button type="submit" name="decision" value="rejected"
                    onclick="return confirm('Reject this assignment?')"
                    class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 rounded-lg transition flex items-center justify-center">
                    ‚úñ Final Reject
                </button>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 text-sm text-blue-800 mt-3">
                This is the final decision. The student will be notified immediately.
            </div>

        </form>

    </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">


            </div>

        </div>
    </div>

    <script>
        // Validation   
        function selectSignatureType(type) {
            currentSignatureType = type;

            const textBtn = document.getElementById('textSigBtn');
            const imageBtn = document.getElementById('imageSigBtn');
            const textSection = document.getElementById('textSignatureSection');
            const imageSection = document.getElementById('imageSignatureSection');
            const textInput = document.getElementById('signatureTextInput');
            const imageInput = document.getElementById('signatureImageInput');

            if (type === 'text') {
                textBtn.classList.add('active', 'border-indigo-500', 'bg-indigo-50', 'text-indigo-700');
                textBtn.classList.remove('border-gray-300', 'bg-white', 'text-gray-700');
                imageBtn.classList.remove('active', 'border-indigo-500', 'bg-indigo-50', 'text-indigo-700');
                imageBtn.classList.add('border-gray-300', 'bg-white', 'text-gray-700');

                textSection.style.display = 'block';
                imageSection.style.display = 'none';
                textInput.required = true;
                imageInput.required = false;
                imageInput.value = '';
            } else {
                imageBtn.classList.add('active', 'border-indigo-500', 'bg-indigo-50', 'text-indigo-700');
                imageBtn.classList.remove('border-gray-300', 'bg-white', 'text-gray-700');
                textBtn.classList.remove('active', 'border-indigo-500', 'bg-indigo-50', 'text-indigo-700');
                textBtn.classList.add('border-gray-300', 'bg-white', 'text-gray-700');

                textSection.style.display = 'none';
                imageSection.style.display = 'block';
                textInput.required = false;
                imageInput.required = true;
            }
        }

        // Live preview for text signature
        document.getElementById('signatureTextInput')?.addEventListener('input', function (e) {
            const preview = document.getElementById('signaturePreview');
            preview.textContent = e.target.value || 'Your signature will appear here';
        });

        // Preview uploaded signature image
        function previewSignatureImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('signatureImagePreview').src = e.target.result;
                    document.getElementById('imagePreviewContainer').classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        }

        function clearSignatureImage() {
            document.getElementById('signatureImageInput').value = '';
            document.getElementById('imagePreviewContainer').classList.add('hidden');
        }

        // Form validation
        document.getElementById("reviewForm").addEventListener("submit", function (e) {
            const remark = document.querySelector("textarea[name='remark']").value.trim();

            if (remark.length < 10) {
                e.preventDefault();
                alert("Please provide at least 10 characters in remarks.");
                return;
            }

            if (currentSignatureType === 'text') {
                const signature = document.getElementById('signatureTextInput').value.trim();
                if (signature.length < 2) {
                    e.preventDefault();
                    alert("Signature cannot be empty.");
                    return;
                }
            } else {
                const imageFile = document.getElementById('signatureImageInput').files[0];
                if (!imageFile) {
                    e.preventDefault();
                    alert("Please upload a signature image.");
                    return;
                }
            }
        });

    </script>

