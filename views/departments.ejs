<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Departments' }) %>

  <body class="bg-gray-50 font-sans text-gray-800">
    <%- include('partials/header') %>

      <main class="p-4 md:p-8">

        <% if (typeof success !=='undefined' && success) { %>
          <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-lg">
            <p class="text-green-700 font-medium">
              <%= success %>
            </p>
          </div>
          <% } %>

            <% if (typeof error !=='undefined' && error) { %>
              <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
                <p class="text-red-700 font-medium">
                  <%= error %>
                </p>
              </div>
              <% } %>

                <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6 gap-4">
                  <div>
                    <h2 class="text-3xl font-bold text-gray-800">Department Management</h2>
                    <p class="text-gray-600 mt-1">Total: <%= totalDepartments %> departments</p>
                  </div>
                  <a href="/admin/departments/add"
                    class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Create Department
                  </a>
                </div>
                <!-- Search & Filter Section -->
                <div class="bg-white rounded-2xl shadow-md p-6 mb-6 border border-gray-100">
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Search by Name -->
                    <div class="md:col-span-2">
                      <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Search by Name
                      </label>
                      <div class="relative">
                        <input type="text" id="searchInput" value="<%= search || '' %>"
                          placeholder="Type to search departments..."
                          class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" />
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                          </svg>
                        </div>
                      </div>
                    </div>

                    <!-- Filter by Type -->
                    <div>
                      <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Filter by Type
                      </label>
                      <select id="filterType"
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-white">
                        <option value="">All Types</option>
                        <option value="UG" <%=filterType==='UG' ? 'selected' : '' %>>UG</option>
                        <option value="PG" <%=filterType==='PG' ? 'selected' : '' %>>PG</option>
                        <option value="Research" <%=filterType==='Research' ? 'selected' : '' %>>Research</option>
                      </select>
                    </div>
                  </div>
                </div>

                <% if (departments && departments.length> 0) { %>
                  <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100">
                    <table class="min-w-full divide-y divide-gray-200">
                      <thead class="bg-gradient-to-r from-indigo-50 to-purple-50">
                        <tr>
                          <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                            Department Name</th>
                          <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                            Program Type</th>
                          <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                            Address</th>
                          <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                            Users</th>
                          <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                            Actions</th>
                        </tr>
                      </thead>
                      <tbody class="bg-white divide-y divide-gray-200">
                        <% departments.forEach(dept=> { %>
                          <tr
                            class="hover:bg-gradient-to-r hover:from-indigo-50/50 hover:to-purple-50/50 transition-colors duration-150">

                            <td class="px-6 py-4 whitespace-nowrap">
                              <div class="flex items-center">
                                <div class="ml-4">
                                  <div class="text-sm font-semibold text-gray-900">
                                    <%= dept.name %>
                                  </div>
                                  <div class="text-xs text-gray-500">
                                    <%= new Date(dept.createdAt).toLocaleDateString() %>
                                  </div>
                                </div>
                              </div>
                            </td>

                            <td class="px-6 py-4 whitespace-nowrap">
                              <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= dept.programType === 'UG' ? 'bg-blue-100 text-blue-800' 
                      : dept.programType === 'PG' ? 'bg-purple-100 text-purple-800' 
                      : 'bg-green-100 text-green-800' %>">
                                <%= dept.programType %>
                              </span>
                            </td>

                            <td class="px-6 py-4">
                              <div class="text-sm text-gray-700 max-w-xs truncate" title="<%= dept.address %>">
                                <%= dept.address %>
                              </div>
                            </td>

                            <td class="px-6 py-4 whitespace-nowrap text-center">
                              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold 
                      <%= dept.userCount > 0 ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z">
                                  </path>
                                </svg>
                                <%= dept.userCount %>
                              </span>
                            </td>

                            <td class="px-6 py-4 whitespace-nowrap text-center">
                              <div class="flex items-center justify-center space-x-2">
                                <a href="/admin/departments/edit/<%= dept._id %>"
                                  class="inline-flex items-center px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors duration-200"
                                  title="Edit">
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                    </path>
                                  </svg>
                                </a>

                                <!-- âœ… Fixed here -->
                                <button data-id="<%= dept._id %>" data-name=<%- JSON.stringify(dept.name) %>
                                  data-usercount="<%= dept.userCount %>"
                                    onclick="confirmDeleteFromDataset(this)"
                                    class="inline-flex items-center px-3 py-2 bg-red-100 text-red-700 rounded-lg
                                    hover:bg-red-200 transition-colors duration-200"
                                    title="Delete">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                      </path>
                                    </svg>
                                </button>
                              </div>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                    <!-- Pagination Section -->
                    <% if (totalPages> 1) { %>
                      <div
                        class="mt-6 flex items-center justify-between bg-white rounded-xl p-4 shadow-md border border-gray-100">
                        <div class="text-sm text-gray-600">
                          Showing page <%= currentPage %> of <%= totalPages %>
                        </div>

                        <div class="flex space-x-2">
                          <% if (currentPage> 1) { %>
                            <a href="?page=<%= currentPage - 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (filterType) { %>&type=<%= filterType %><% } %>"
                              class="px-4 py-2 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition-colors duration-200 font-medium">
                              Previous
                            </a>
                            <% } %>

                              <% const maxButtons=5; let startPage=Math.max(1, currentPage - Math.floor(maxButtons /
                                2)); let endPage=Math.min(totalPages, startPage + maxButtons - 1); if (endPage -
                                startPage + 1 < maxButtons) { startPage=Math.max(1, endPage - maxButtons + 1); } %>

                                <% for (let i=startPage; i <=endPage; i++) { %>
                                  <% const active=i===currentPage ? 'bg-indigo-600 text-white'
                                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200' ; %>
                                    <a href="?page=<%= i %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (filterType) { %>&type=<%= filterType %><% } %>"
                                      class="px-4 py-2 <%= active %> rounded-lg transition-colors duration-200 font-medium">
                                      <%= i %>
                                    </a>
                                    <% } %>

                                      <% if (currentPage < totalPages) { %>
                                        <a href="?page=<%= currentPage + 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (filterType) { %>&type=<%= filterType %><% } %>"
                                          class="px-4 py-2 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition-colors duration-200 font-medium">
                                          Next
                                        </a>
                                        <% } %>
                        </div>
                      </div>
                      <% } %>

                  </div>
                  <% } else { %>
                    <div class="bg-white rounded-2xl shadow-xl p-12 text-center border border-gray-100">
                      <h3 class="text-2xl font-bold text-gray-800 mb-2">No Departments Found</h3>
                      <p class="text-gray-600 mb-6">Create your first department to get started.</p>
                      <a href="/admin/departments/add"
                        class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-lg">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4">
                          </path>
                        </svg>
                        Create Department
                      </a>
                    </div>
                    <% } %>

                      <!-- Delete Modal -->
                      <div id="deleteModal"
                        class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                        <div class="bg-white rounded-2xl p-8 max-w-md mx-4 shadow-2xl">
                          <div class="text-center">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Delete Department</h3>
                            <p class="text-gray-600 mb-6" id="deleteMessage"></p>
                            <div class="flex space-x-3">
                              <button onclick="closeDeleteModal()"
                                class="flex-1 px-4 py-2 border-2 border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-all duration-200">
                                Cancel
                              </button>
                              <form id="deleteForm" method="POST" class="flex-1">
                                <button type="submit"
                                  class="w-full px-4 py-2 bg-red-600 text-white font-semibold rounded-xl hover:bg-red-700 transition-all duration-200">
                                  Delete
                                </button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>

      </main>

      <script src="../public/js/department.js"></script>
  </body>

</html>