<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Professor Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<!-- Bell Animation -->
<style>
  @keyframes bell-ring {

    0%,
    100% {
      transform: rotate(0deg);
    }

    20% {
      transform: rotate(15deg);
    }

    40% {
      transform: rotate(-10deg);
    }

    60% {
      transform: rotate(5deg);
    }

    80% {
      transform: rotate(-5deg);
    }
  }

  .bell-swing {
    transform-origin: top center;
  }

  .group:hover .bell-swing {
    animation: bell-ring 1s cubic-bezier(0.4, 0.26, 0.2, 1.5) both;
  }
</style>

<nav class="bg-white/90 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">

    <!-- Logo -->

    <a href="/professor/dashboard"
      class="flex items-center space-x-4 gap-4 text-2xl font-bold text-indigo-600 tracking-tight hover:text-indigo-700 transition">
      <div class="w-24 h-10 bg-indigo-600 rounded-lg flex items-center justify-center shadow-md">
        <span class="text-white font-bold text-xl">UNIcore</span>
      </div>
      Professor Portal
    </a>


    <!-- Links -->
    <div class="flex items-center space-x-8">


      <a href="/professor/dashboard"
        class="group relative inline-flex pb-1 text-gray-600 font-medium hover:text-indigo-600 transition-colors duration-300">
        Dashboard
        <span class="absolute left-0 -bottom-0.5 h-0.5 w-full bg-indigo-600
           transform scale-x-0 origin-left
           transition-transform duration-300 group-hover:scale-x-100">
        </span>
      </a>


      <a href="/professor/assignments"
        class="group relative inline-flex pb-1 text-gray-600 font-medium hover:text-indigo-600 transition-colors duration-300">
        Assignments
        <span class="absolute left-0 -bottom-0.5 h-0.5 w-full bg-indigo-600
           transform scale-x-0 origin-left
           transition-transform duration-300 group-hover:scale-x-100">
        </span>
      </a>



      <!-- Notifications -->
      <a href="/professor/notifications"
        class="group relative flex items-center text-gray-500 hover:text-indigo-600 transition-colors duration-300">
        <svg class="w-6 h-6 bell-swing" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11
               a6.002 6.002 0 00-4-5.659V5
               a2 2 0 10-4 0v.341
               C7.67 6.165 6 8.388 6 11v3.159
               c0 .538-.214 1.055-.595 1.436L4 17h5
               m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>

        <% if (typeof unreadNotifications !=='undefined' && unreadNotifications> 0) { %>
          <span
            class="absolute -top-1 -right-2 bg-red-500 text-white text-[10px] font-bold rounded-full px-1.5 py-0.5 shadow-sm border border-white animate-pulse">
            <%= unreadNotifications %>
          </span>
          <% } %>
      </a>

      <!-- Logout -->
      <a href="/auth/logout"
        class="px-5 py-2 bg-gray-900 hover:bg-gray-800 text-white text-sm font-medium rounded-full shadow hover:shadow-md transition-all duration-300 transform hover:-translate-y-0.5">
        Logout
      </a>

    </div>
  </div>
</nav>