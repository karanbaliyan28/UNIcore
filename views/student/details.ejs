<%- include('../partials/student/header') %>

  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

  <div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-5xl mx-auto">

      <!-- Assignment Details Card -->
      <div class="bg-white rounded-xl shadow-md p-8 mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">
          <%= assignment.title %>
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Left Column -->
          <div class="space-y-4">
            <div>
              <p class="text-sm font-semibold text-gray-600">Category</p>
              <p class="text-gray-900 mt-1">
                <%= assignment.category %>
              </p>
            </div>

            <div>
              <p class="text-sm font-semibold text-gray-600">Status</p>
              <% if (assignment.status==="approved" ) { %>
                <span class="inline-block px-4 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium mt-1">
                  ‚úÖ Approved
                </span>
                <% } else if (assignment.status==="submitted" ) { %>
                  <span class="inline-block px-4 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mt-1">
                    üìù Under Review
                  </span>
                  <% } else if (assignment.status==="forwarded" ) { %>
                    <span
                      class="inline-block px-4 py-1 bg-purple-100 text-purple-700 rounded-full text-sm font-medium mt-1">
                      üì§ Forwarded
                    </span>
                    <% } else if (assignment.status==="rejected" ) { %>
                      <span
                        class="inline-block px-4 py-1 bg-red-100 text-red-700 rounded-full text-sm font-medium mt-1">
                        ‚ùå Rejected
                      </span>
                      <% } else { %>
                        <span
                          class="inline-block px-4 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-medium mt-1">
                          üìÑ Draft
                        </span>
                        <% } %>
            </div>

            <div>
              <p class="text-sm font-semibold text-gray-600">Submitted Date</p>
              <p class="text-gray-900 mt-1">
                <%= assignment.createdAt.toLocaleDateString('en-US', { month: 'long' , day: 'numeric' , year: 'numeric'
                  }) %>
              </p>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-4">
            <div>
              <p class="text-sm font-semibold text-gray-600">Reviewer</p>
              <p class="text-gray-900 mt-1">
                <%= assignment.reviewerId ? assignment.reviewerId.name : "Not Assigned" %>
                  <% if (assignment.reviewerId && assignment.reviewerId.department) { %>
                    <span class="text-gray-500 text-sm">(<%= assignment.reviewerId.department %>)</span>
                    <% } %>
              </p>
            </div>

            <div>
              <p class="text-sm font-semibold text-gray-600">File</p>
              <a href="/student/assignments/<%= assignment._id %>/download"
                class="inline-flex items-center text-blue-600 hover:text-blue-800 mt-1 font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Download Assignment
              </a>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="mt-6 pt-6 border-t">
          <p class="text-sm font-semibold text-gray-600 mb-2">Description</p>
          <p class="text-gray-700">
            <%= assignment.description || 'No description provided' %>
          </p>
        </div>

        <!-- Actions -->
        <div class="mt-6 pt-6 border-t">
          <a href="/student/dashboard"
            class="inline-block px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition font-medium">
            ‚Üê Back to Dashboard
          </a>
        </div>
      </div>

      <!-- Submit for Review (Draft Status) -->
      <% if (assignment.status==="draft" ) { %>
        <div class="bg-blue-50 rounded-xl shadow-md p-8 mb-6 border-2 border-blue-200">
          <h3 class="text-xl font-bold text-gray-900 mb-4">üì§ Submit for Review</h3>
          <p class="text-gray-700 mb-4">Select a professor to review your assignment:</p>

          <form action="/student/assignments/<%= assignment._id %>/submit" method="POST">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Select Professor</label>
            <select name="reviewerId" required
              class="w-full p-3 border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500 transition mb-4">
              <option value="">-- Choose a Professor --</option>
              <% professors.forEach(p=> { %>
                <option value="<%= p._id %>">
                  <%= p.name %> ‚Äî <%= p.department || 'Department' %>
                </option>
                <% }) %>
            </select>

            <button type="submit"
              onclick="return confirm('Submit this assignment for review? You cannot edit after submission.')"
              class="w-full md:w-auto px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
              Submit for Review
            </button>
          </form>
        </div>
        <% } %>

          <!-- Resubmit (Rejected Status) -->
          <% if (assignment.status==="rejected" ) { %>
            <div class="bg-red-50 rounded-xl shadow-md p-8 mb-6 border-2 border-red-200">
              <h3 class="text-xl font-bold text-red-700 mb-4">üîÑ Resubmit Assignment</h3>

              <div class="bg-white rounded-lg p-4 mb-4">
                <p class="text-sm font-semibold text-gray-700 mb-1">Rejection Remarks:</p>
                <p class="text-gray-600 italic">
                  <%= assignment.rejectionRemark || "No remarks provided" %>
                </p>
              </div>

              <form action="/student/assignments/<%= assignment._id %>/resubmit" method="POST"
                enctype="multipart/form-data">
                <!-- Optional: Upload New File -->
                <div class="mb-4">
                  <label class="block text-sm font-semibold text-gray-700 mb-2">Upload Revised File (Optional)</label>
                  <input type="file" name="file" accept=".pdf,.doc,.docx"
                    class="w-full p-3 border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500">
                  <p class="text-xs text-gray-500 mt-1">Leave empty to keep the existing file</p>
                </div>

                <!-- Select New Reviewer -->
                <div class="mb-4">
                  <label class="block text-sm font-semibold text-gray-700 mb-2">Select Reviewer</label>
                  <select name="reviewerId" required
                    class="w-full p-3 border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Choose a Professor --</option>
                    <% professors.forEach(p=> { %>
                      <option value="<%= p._id %>" <%=assignment.reviewerId && assignment.reviewerId._id &&
                        assignment.reviewerId._id.toString()===p._id.toString() ? 'selected' : '' %>>
                        <%= p.name %> ‚Äî <%= p.department || 'Department' %>
                      </option>
                      <% }) %>
                  </select>
                </div>

                <!-- Resubmission Remarks -->
                <div class="mb-4">
                  <label class="block text-sm font-semibold text-gray-700 mb-2">Resubmission Notes (Optional)</label>
                  <textarea name="remarks" rows="3"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                    placeholder="Explain the changes you made..."></textarea>
                </div>

                <button type="submit"
                  class="w-full md:w-auto px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
                  Resubmit Assignment
                </button>
              </form>
            </div>
            <% } %>

              <!-- Review History -->
              <div class="bg-white rounded-xl shadow-md p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">üìã Review History</h3>

                <% if (assignment.history.length===0) { %>
                  <p class="text-gray-500 italic">No review history available yet.</p>
                  <% } else { %>
                    <div class="space-y-6">
                      <% assignment.history.forEach(h=> { %>
                        <div class="border-l-4 pl-6 py-4
              <%= h.action === 'approved' ? 'border-green-500 bg-green-50' : 
                  (h.action === 'rejected' ? 'border-red-500 bg-red-50' : 
                  (h.action === 'forwarded' ? 'border-purple-500 bg-purple-50' : 
                  (h.action === 'resubmitted' ? 'border-blue-500 bg-blue-50' : 
                  'border-gray-500 bg-gray-50'))) %>">

                          <!-- Action Badge -->
                          <div class="flex items-center justify-between mb-3">
                            <span class="px-3 py-1 rounded-full text-xs font-bold uppercase
                  <%= h.action === 'approved' ? 'bg-green-200 text-green-800' : 
                      (h.action === 'rejected' ? 'bg-red-200 text-red-800' : 
                      (h.action === 'forwarded' ? 'bg-purple-200 text-purple-800' : 
                      (h.action === 'resubmitted' ? 'bg-blue-200 text-blue-800' : 
                      'bg-gray-200 text-gray-800'))) %>">
                              <%= h.action %>
                            </span>
                            <span class="text-xs text-gray-500">
                              <%= h.date.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric'
                                , hour: '2-digit' , minute: '2-digit' }) %>
                            </span>
                          </div>

                          <!-- Reviewer Info -->
                          <% if (h.reviewerId) { %>
                            <p class="text-sm font-semibold text-gray-800 mb-2">
                              Reviewed by <%= h.reviewerId.name %>
                                <% if (h.reviewerId.department) { %>
                                  <span class="text-gray-500 font-normal">(<%= h.reviewerId.department %>)</span>
                                  <% } %>
                            </p>
                            <% } %>

                              <!-- Remarks -->
                              <% if (h.remark) { %>
                                <div class="bg-white rounded-lg p-4 border border-gray-200">
                                  <p class="text-sm text-gray-700 italic">"<%= h.remark %>"</p>
                                </div>
                                <% } %>

                                  <!-- Digital Signature -->
                                  <% if (h.signature || h.signatureImage) { %>
                                    <div class="mt-4 bg-white rounded-lg p-4 border-2 border-blue-200">
                                      <p class="text-xs text-blue-700 font-semibold uppercase tracking-wide mb-3">
                                        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                                          <path fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                            clip-rule="evenodd" />
                                        </svg>
                                        Digitally Signed
                                      </p>

                                      <% if (h.signatureImage) { %>
                                        <div class="flex justify-center">
                                          <img src="/uploads/<%= h.signatureImage %>" alt="Signature"
                                            class="h-20 object-contain">
                                        </div>
                                        <% } else if (h.signature) { %>
                                          <p class="text-3xl text-center text-blue-800"
                                            style="font-family: 'Great Vibes', cursive;">
                                            <%= h.signature %>
                                          </p>
                                          <% } %>
                                    </div>
                                    <% } %>

                        </div>
                        <% }) %>
                    </div>
                    <% } %>
              </div>

    </div>
  </div>

  <%- include('../partials/student/footer') %>