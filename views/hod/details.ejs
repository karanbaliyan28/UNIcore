<%- include("../partials/hod/header") %>

    <div class="min-h-screen bg-gray-50 py-10">
        <div class="max-w-6xl mx-auto px-4">

            <!-- Back -->
            <div class="mb-6">
                <a href="/hod/dashboard" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Dashboard
                </a>
            </div>

            <!-- Header -->
            <div class="bg-white p-6 shadow rounded-2xl border-l-4 border-purple-600 mb-6">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Assignment Details</h1>

                <p class="text-gray-700"><b>Status:</b>
                    <% if (assignment.status==="approved" ) { %>
                        <span class="text-green-700">✔ Approved</span>
                        <% } else if (assignment.status==="rejected" ) { %>
                            <span class="text-red-700">✘ Rejected</span>
                            <% } %>
                </p>
            </div>

            <!-- Assignment Info -->
            <div class="bg-white shadow rounded-xl p-6 mb-6">

                <h2 class="text-xl font-bold mb-4 text-gray-900">Student Info</h2>

                <p class="mb-1"><b>Name:</b>
                    <%= assignment.name %>
                </p>
                <p class="mb-4"><b>Email:</b>
                    <%= assignment.email %>
                </p>

                <h2 class="text-xl font-bold my-4 text-gray-900">Assignment</h2>
                <p><b>Title:</b>
                    <%= assignment.title %>
                </p>
                <p><b>Description:</b>
                    <%= assignment.description || 'No description.' %>
                </p>
            </div>

            <!-- PDF VIEW -->
            <div class="bg-white shadow rounded-xl p-6 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Document</h2>

                <% if (assignment.fileUrl) { %>
                    <iframe src="/uploads/<%= assignment.fileUrl %>#toolbar=1" class="w-full"
                        style="height:450px; border:none;"></iframe>
                    <% } else { %>
                        <p class="text-gray-500 text-center py-10">No file uploaded</p>
                        <% } %>
            </div>

            <!-- History -->
            <% if (assignment.history && assignment.history.length> 0) { %>
                <div class="bg-white shadow rounded-xl p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Review History</h2>

                    <div class="space-y-3">

                        <% assignment.history.forEach(h=> { %>

                            <div class="p-4 rounded-lg border-l-4 
              <%= h.action.includes('approved') ? 'border-green-500 bg-green-50'
                : h.action.includes('rejected') ? 'border-red-500 bg-red-50'
                : 'border-purple-500 bg-purple-50' %>">

                                <p class="font-bold text-gray-900 mb-1">
                                    <%= h.action.toUpperCase() %>
                                </p>

                                <p class="text-sm text-gray-700">
                                    <%= h.remark %>
                                </p>

                                <% if (h.reviewerId) { %>
                                    <p class="text-xs text-gray-500 mt-1">By <%= h.reviewerId.name %>
                                    </p>
                                    <% } %>

                                        <p class="text-xs text-gray-500">
                                            <%= new Date(h.date).toLocaleDateString() %>
                                        </p>

                            </div>

                            <% }) %>

                    </div>
                </div>
                <% } %>

        </div>
    </div>

    <%- include("../partials/hod/footer") %>