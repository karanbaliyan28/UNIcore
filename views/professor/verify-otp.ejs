<%- include('../partials/professor/header') %>

    <style>
        /* Base Reset */
        html,
        body {
            height: 100%;
            overflow: hidden;
            margin: 0;
        }

        /* Subtle Professional Background */
        .page-bg {
            background: linear-gradient(135deg, #f8fafc, #eef2ff);
        }

        /* Card Styling */
        .glass-card {
            background: #ffffff;
            border: 1px solid #e5e7eb;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        /* Simple Fade Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(12px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade {
            animation: fadeIn 0.4s ease-out;
        }

        /* OTP Input */
        .otp-input {
            letter-spacing: 0.45em;
        }

        .otp-input:focus {
            transform: scale(1.01);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
        }
    </style>

    <div class="min-h-screen page-bg flex items-center justify-center p-4">

        <div class="glass-card w-full max-w-sm rounded-xl p-6 animate-fade">

            <!-- Header -->
            <div class="text-center mb-4">
                <div
                    class="inline-flex items-center justify-center w-11 h-11 rounded-full bg-blue-100 text-blue-600 mb-3 shadow-sm">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>

                <h2 class="text-xl font-semibold text-gray-900">Verify Signature</h2>
                <p class="text-xs text-gray-500 mt-1">
                    OTP sent to <span class="font-medium text-blue-600">
                        <%= email %>
                    </span>
                </p>
            </div>

            <!-- Error Message -->
            <% if (typeof error !=='undefined' ) { %>
                <div class="bg-red-50 border border-red-200 text-red-700 px-3 py-2 rounded-lg text-xs mb-4 text-center">
                    <%= error %>
                </div>
                <% } %>

                    <!-- OTP Form -->
                    <form action="/professor/review/verify-otp" method="POST" id="otpForm" class="space-y-4">

                        <div class="relative">
                            <input id="otp" name="otp" type="text" required
                                class="otp-input block w-full px-4 py-3 text-center text-xl font-bold text-gray-800 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                                placeholder="••••••" maxlength="6" autocomplete="off" inputmode="numeric"
                                pattern="[0-9]{6}">

                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <span id="timer"
                                    class="text-[11px] font-semibold text-blue-600 bg-blue-50 px-2 py-1 rounded">
                                    10:00
                                </span>
                            </div>
                        </div>

                        <button type="submit" id="submitBtn"
                            class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                            Verify & Approve
                        </button>
                    </form>

                    <!-- Actions -->
                    <div class="mt-4 pt-3 border-t border-gray-100 grid grid-cols-2 gap-3">

                        <button onclick="resendOTP()" id="resendBtn" disabled
                            class="flex items-center justify-center px-3 py-2 border border-gray-200 rounded-lg text-xs font-medium text-gray-600 bg-white hover:bg-gray-50 transition-all disabled:opacity-50 disabled:cursor-not-allowed">
                            <span id="resendText">
                                Resend (<span id="resendTimer">60</span>s)
                            </span>
                        </button>

                        <a href="/professor/dashboard"
                            class="flex items-center justify-center px-3 py-2 border border-gray-200 rounded-lg text-xs font-medium text-gray-600 bg-white hover:bg-gray-50 transition-all">
                            Cancel
                        </a>
                    </div>

                    <!-- Footer Note -->
                    <p class="text-[10px] text-center text-gray-400 mt-3">
                        Secured by UNICore • OTP expires in 10 minutes
                    </p>

        </div>
    </div>

    <script src="../../public/js/professor/otp.js"></script>

    <%- include('../partials/professor/footer') %>