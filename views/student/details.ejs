<%- include('../partials/student/header') %>

    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

    <div class="p-8 max-w-4xl mx-auto">

        <div class="bg-white shadow-md rounded-xl p-6 border border-gray-200">

            <h2 class="text-3xl font-bold mb-4 text-gray-800">
                <%= assignment.title %>
            </h2>

            <div class="space-y-2">

                <p><strong class="text-gray-700">Category:</strong>
                    <span class="text-gray-800">
                        <%= assignment.category %>
                    </span>
                </p>

                <p><strong class="text-gray-700">Status:</strong>
                    <% if (assignment.status==="approved" ) { %>
                        <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-semibold">
                            Approved
                        </span>
                        <% } else if (assignment.status==="submitted" ) { %>
                            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold">
                                Submitted
                            </span>
                            <% } else if (assignment.status==="rejected" ) { %>
                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-semibold">
                                    Rejected
                                </span>
                                <% } else { %>
                                    <span
                                        class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                        Draft
                                    </span>
                                    <% } %>
                </p>

                <p><strong class="text-gray-700">Date:</strong>
                    <span class="text-gray-800">
                        <%= assignment.createdAt.toDateString() %>
                    </span>
                </p>

                <p><strong class="text-gray-700">Reviewer:</strong>
                    <span class="text-gray-800">
                        <%= assignment.reviewerId ? assignment.reviewerId.name : "Not Assigned" %>
                    </span>
                </p>

            </div>

            <div class="mt-4">
                <strong class="text-gray-700">Description:</strong>
                <p class="text-gray-700 mt-1">
                    <%= assignment.description %>
                </p>
            </div>

            <div class="mt-4">
                <a href="/student/assignments/<%= assignment._id %>/download"
                    class="text-indigo-600 underline hover:text-indigo-800 font-medium">
                    Download File
                </a>
            </div>

            <div class="mt-6">
                <a href="/student/assignments"
                    class="px-4 py-2 bg-gray-700 text-white rounded hover:bg-black transition shadow">
                    Back to Assignments
                </a>
            </div>

        </div>


        <% if (assignment.status==="draft" ) { %>
            <div class="bg-white shadow-md rounded-xl p-6 border mt-6">

                <h3 class="text-xl font-semibold text-gray-800 mb-2">Submit for Review</h3>

                <form action="/student/assignments/<%= assignment._id %>/submit" method="POST">

                    <label class="font-semibold">Select Professor:</label>
                    <select name="reviewerId" required class="p-3 border rounded-lg w-full mt-2 mb-3 bg-white shadow-sm focus:ring-2 
                       focus:ring-indigo-500 transition">
                        <% professors.forEach(p=> { %>
                            <option value="<%= p._id %>">
                                <%= p.name %> — <%= p.department %>
                            </option>
                            <% }) %>
                    </select>

                    <button type="submit"
                        onclick="return confirm('Submit this assignment for review? You cannot edit after this.')"
                        class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition shadow">
                        Submit for Review
                    </button>

                </form>

            </div>
            <% } %>

                <% if (assignment.status==="rejected" ) { %>
                    <div class="bg-white shadow-md rounded-xl p-6 border mt-6">

                        <h3 class="text-xl font-semibold text-red-700 mb-3">Resubmit Assignment</h3>

                        <p class="text-gray-600 mb-2">
                            <strong>Rejection Remarks:</strong>
                            <span class="italic">
                                <%= assignment.rejectionRemark || "No remarks provided" %>
                            </span>
                        </p>

                        <form action="/student/assignments/<%= assignment._id %>/resubmit" method="POST"
                            enctype="multipart/form-data">

                            <label class="font-semibold">Upload New File (optional)</label>
                            <input type="file" name="file" accept="application/pdf"
                                class="p-2 border rounded w-full mt-2 mb-3">

                            <label class="font-semibold">Update Description (optional)</label>
                            <textarea name="description" rows="3"
                                class="p-3 border rounded w-full mt-2 mb-3"><%= assignment.description %></textarea>

                            <button type="submit" onclick="return confirm('Resubmit this assignment?')"
                                class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition shadow">
                                Resubmit
                            </button>

                        </form>

                    </div>
                    <% } %>


                        <h3 class="text-2xl font-bold text-gray-800 mt-10 mb-4">Approval History</h3>

                        <!-- Replace the history section in student assignment details -->
                        <h3 class="text-2xl font-bold text-gray-800 mt-10 mb-4">Approval History</h3>

                        <div class="bg-white rounded-xl shadow p-6 border border-gray-200">

                            <% if (assignment.history.length===0) { %>
                                <p class="text-gray-500 italic">No history available yet.</p>
                                <% } %>

                                    <% assignment.history.forEach(h=> { %>
                                        <div class="mb-6 pb-6 border-b border-gray-200 last:border-b-0">

                                            <div class="flex justify-between items-center mb-2">
                                                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide
                    <%= h.action === 'approved' ? 'bg-green-100 text-green-700' : 
                       (h.action === 'rejected' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-700') %>">
                                                    <%= h.action %>
                                                </span>
                                                <span class="text-gray-400 text-xs">
                                                    <%= h.date.toLocaleDateString() %> •
                                                        <%= h.date.toLocaleTimeString([], {hour: '2-digit' ,
                                                            minute:'2-digit'}) %>
                                                </span>
                                            </div>

                                            <% if (h.reviewerId) { %>
                                                <p class="text-gray-800 font-semibold text-sm">
                                                    by <%= h.reviewerId.name %>
                                                        <span class="text-gray-500 font-normal">(<%=
                                                                h.reviewerId.department %>)</span>
                                                </p>
                                                <% } %>

                                                    <% if (h.remark) { %>
                                                        <div
                                                            class="mt-2 bg-gray-50 p-3 rounded-lg border-l-4 border-gray-300">
                                                            <p class="text-gray-700 italic text-sm">"<%= h.remark %>"
                                                            </p>
                                                        </div>
                                                        <% } %>

                                                            <!-- Digital Signature Display -->
                                                            <% if (h.signature || h.signatureImage) { %>
                                                                <div
                                                                    class="mt-4 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-4 border border-indigo-100">
                                                                    <div class="flex items-start justify-between">
                                                                        <div class="flex-1">
                                                                            <div class="flex items-center mb-3">
                                                                                <svg class="w-4 h-4 text-indigo-600 mr-2"
                                                                                    fill="none" stroke="currentColor"
                                                                                    viewBox="0 0 24 24">
                                                                                    <path stroke-linecap="round"
                                                                                        stroke-linejoin="round"
                                                                                        stroke-width="2"
                                                                                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                                                                </svg>
                                                                                <p
                                                                                    class="text-[10px] text-indigo-700 uppercase tracking-widest font-bold">
                                                                                    Digitally Signed
                                                                                </p>
                                                                            </div>

                                                                            <% if (h.signatureImage) { %>
                                                                                <!-- Image Signature -->
                                                                                <div
                                                                                    class="bg-white rounded-lg p-4 border-2 border-indigo-200 mb-2">
                                                                                    <img src="/uploads/<%= h.signatureImage %>"
                                                                                        alt="Digital Signature"
                                                                                        class="h-20 w-auto max-w-full object-contain mx-auto">
                                                                                </div>
                                                                                <p
                                                                                    class="text-xs text-indigo-600 font-medium text-center">
                                                                                    <svg class="w-3 h-3 inline mr-1"
                                                                                        fill="currentColor"
                                                                                        viewBox="0 0 20 20">
                                                                                        <path fill-rule="evenodd"
                                                                                            d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                                                                                            clip-rule="evenodd" />
                                                                                    </svg>
                                                                                    Signature Image
                                                                                </p>
                                                                                <% } else if (h.signature) { %>
                                                                                    <!-- Text Signature -->
                                                                                    <div
                                                                                        class="bg-white rounded-lg p-4 border-2 border-indigo-200 mb-2">
                                                                                        <p class="text-3xl text-indigo-800 transform -rotate-2 text-center"
                                                                                            style="font-family: 'Great Vibes', cursive;">
                                                                                            <%= h.signature %>
                                                                                        </p>
                                                                                    </div>
                                                                                    <p
                                                                                        class="text-xs text-indigo-600 font-medium text-center">
                                                                                        <svg class="w-3 h-3 inline mr-1"
                                                                                            fill="currentColor"
                                                                                            viewBox="0 0 20 20">
                                                                                            <path fill-rule="evenodd"
                                                                                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                                                                                clip-rule="evenodd" />
                                                                                        </svg>
                                                                                        Text Signature
                                                                                    </p>
                                                                                    <% } %>
                                                                        </div>
                                                                    </div>

                                                                    <!-- Verification Badge -->
                                                                    <div
                                                                        class="mt-3 pt-3 border-t border-indigo-200 flex items-center justify-center">
                                                                        <div
                                                                            class="flex items-center text-green-700 text-xs font-semibold bg-green-50 px-3 py-1.5 rounded-full">
                                                                            <svg class="w-4 h-4 mr-1.5"
                                                                                fill="currentColor" viewBox="0 0 20 20">
                                                                                <path fill-rule="evenodd"
                                                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                                                    clip-rule="evenodd" />
                                                                            </svg>
                                                                            Verified & Authenticated
                                                                        </div>
                                                                    </div>

                                                                    <!-- Timestamp -->
                                                                    <p
                                                                        class="text-[10px] text-gray-500 text-center mt-2">
                                                                        Signed on <%= h.date.toLocaleDateString('en-US',
                                                                            { weekday: 'long' , year: 'numeric' ,
                                                                            month: 'long' , day: 'numeric' ,
                                                                            hour: '2-digit' , minute: '2-digit' }) %>
                                                                    </p>
                                                                </div>
                                                                <% } %>

                                        </div>
                                        <% }) %>

                        </div>

                        <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

    </div>

    <%- include('../partials/student/footer') %>