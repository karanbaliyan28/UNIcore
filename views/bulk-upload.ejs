<%- include('./partials/student/header') %>

    <div class="p-6 max-w-2xl mx-auto">

        <h2 class="text-2xl font-bold mb-6">Bulk Upload Assignments</h2>

        <form action="/student/assignments/bulk-upload" method="POST" enctype="multipart/form-data" class="space-y-4">

            <div>
                <label class="block font-semibold mb-1">Common Description</label>
                <textarea name="description" class="w-full p-3 border rounded"></textarea>
            </div>

            <div>
                <label class="block font-semibold mb-1">Category</label>
                <select name="category" class="w-full p-3 border rounded" required>
                    <option value="Assignment">Assignment</option>
                    <option value="Thesis">Thesis</option>
                    <option value="Report">Report</option>
                </select>
            </div>

            <div>
                <label class="block font-semibold mb-1">Select Reviewer</label>
                <select name="reviewerId" class="w-full p-3 border rounded" required>
                    <% professors.forEach(p=> { %>
                        <option value="<%= p._id %>">
                            <%= p.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div>
                <label class="block font-semibold mb-1">Upload Files (max 5 PDFs)</label>
                <input type="file" name="files" multiple required accept="application/pdf"
                    class="w-full p-3 border rounded">
            </div>

            <button class="bg-indigo-600 text-white px-4 py-2 rounded">Upload All</button>

        </form>

    </div>

    <%- include('./partials/student/footer') %>