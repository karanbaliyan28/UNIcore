<%- include('../partials/professor/header') %>

    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 py-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

            <!-- Back Button -->
            <div class="mb-6">
                <a href="/professor/dashboard"
                    class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Dashboard
                </a>
            </div>

            <!-- Header -->
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-6 border-l-4 border-blue-500">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">Assignment Details</h1>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Student Info -->
                    <div class="flex items-start space-x-4">
                        <div
                            class="flex-shrink-0 h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                            <%= assignment.studentId.name.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 font-medium">Student Name</p>
                            <p class="text-lg font-semibold text-gray-900">
                                <%= assignment.studentId.name %>
                            </p>
                            <p class="text-sm text-gray-500">
                                <%= assignment.studentId.email %>
                            </p>
                        </div>
                    </div>

                    <!-- Submission Info -->
                    <div class="space-y-2">
                        <div>
                            <p class="text-sm text-gray-600 font-medium">Submitted On</p>
                            <p class="text-lg font-semibold text-gray-900">
                                <%= assignment.createdAt.toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric'
                                    , month: 'long' , day: 'numeric' }) %>
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 font-medium">Status</p>
                            <p class="text-lg font-semibold">
                                <% if (assignment.status==='submitted' ) { %>
                                    <span class="text-blue-600">üìù Pending Review</span>
                                    <% } else if (assignment.status==='approved' ) { %>
                                        <span class="text-green-600">‚úÖ Approved</span>
                                        <% } else if (assignment.status==='rejected' ) { %>
                                            <span class="text-red-600">‚ùå Rejected</span>
                                            <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="grid grid-cols-1 gap-6">

                <!-- Assignment Title & Description -->
                <div class="bg-white rounded-xl shadow-md p-4">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Assignment Details</h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Left: Title -->
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase">
                                Title
                            </label>
                            <p class="text-lg text-gray-900 font-medium mt-1">
                                <%= assignment.title %>
                            </p>
                        </div>

                        <!-- Right: Description -->
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase">
                                Description
                            </label>
                            <p class="text-gray-700 mt-1 leading-relaxed">
                                <%= assignment.description || 'No description provided.' %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- PDF Viewer -->
                <div class="bg-white rounded-2xl shadow-md p-6" style="height: 500px;">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-gray-900">Assignment Document</h2>

                        <% if (assignment.fileUrl) { %>
                            <a href="/uploads/<%= assignment.fileUrl %>" download
                                class="px-4 py-2 bg-indigo-600 text-white text-xs font-medium rounded-lg hover:bg-indigo-700 transition flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 
                                      01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Download PDF
                            </a>
                            <% } %>
                    </div>

                    <% if (assignment.fileUrl) { %>
                        <!-- FULL PREMIUM VIEWER -->
                        <div class="border rounded-xl bg-gray-50 shadow-inner overflow-hidden" style="height: 380px;">
                            <iframe src="/uploads/<%= assignment.fileUrl %>#toolbar=1" class="w-full h-full"
                                style="border:none;">
                            </iframe>
                        </div>

                        <div class="mt-4 text-center">
                            <a href="/uploads/<%= assignment.fileUrl %>" target="_blank"
                                class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                Open in New Tab ‚Üí
                            </a>
                        </div>
                        <% } else { %>
                            <p class="text-center py-12 text-gray-500">No file uploaded.</p>
                            <% } %>
                </div>



                <!-- Review Status (if reviewed) -->
                <% if (assignment.status !=='submitted' && assignment.status !=='draft' ) { %>
                    <div class="bg-white rounded-2xl shadow-lg p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">Review Decision</h2>

                        <div
                            class="border-l-4 <%= assignment.status === 'approved' ? 'border-green-500 bg-green-50' : 'border-red-500 bg-red-50' %> p-4 rounded">
                            <div class="mb-3">
                                <span
                                    class="font-semibold <%= assignment.status === 'approved' ? 'text-green-700' : 'text-red-700' %> text-lg">
                                    <%= assignment.status==='approved' ? '‚úÖ APPROVED' : '‚ùå REJECTED' %>
                                </span>
                            </div>

                            <div class="mb-2">
                                <p class="text-sm font-medium text-gray-700">Remarks:</p>
                                <p class="text-gray-800">
                                    <%= assignment.status==='approved' ? assignment.approvalRemark :
                                        assignment.rejectionRemark %>
                                </p>
                            </div>

                            <div class="mt-3">
                                <p class="text-sm text-gray-600">
                                    Reviewed by: <span class="font-medium">
                                        <%= assignment.reviewerSignature %>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- History (if exists) -->
                        <% if (assignment.history && assignment.history.length> 0) { %>
                            <div class="bg-white rounded-2xl shadow-lg p-6">
                                <h2 class="text-xl font-bold text-gray-900 mb-4">Review History</h2>
                                <div class="space-y-3">
                                    <% assignment.history.forEach(h=> { %>
                                        <div
                                            class="border-l-4 <%= h.action === 'approved' ? 'border-green-500 bg-green-50' : h.action === 'rejected' ? 'border-red-500 bg-red-50' : 'border-purple-500 bg-purple-50' %> p-4 rounded">
                                            <div class="flex justify-between items-start mb-2">
                                                <span
                                                    class="font-semibold <%= h.action === 'approved' ? 'text-green-700' : h.action === 'rejected' ? 'text-red-700' : 'text-purple-700' %>">
                                                    <%= h.action.charAt(0).toUpperCase() + h.action.slice(1) %>
                                                </span>
                                                <span class="text-sm text-gray-600">
                                                    <%= new Date(h.date).toLocaleDateString() %>
                                                </span>
                                            </div>
                                            <p class="text-gray-700 text-sm mb-1">
                                                <%= h.remark %>
                                            </p>
                                            <% if (h.signature) { %>
                                                <p class="text-xs text-gray-500">‚Äî <%= h.signature %>
                                                </p>
                                                <% } %>
                                                    <% if (h.reviewerId && h.reviewerId.name) { %>
                                                        <p class="text-xs text-gray-500 mt-1">By: <%= h.reviewerId.name
                                                                %>
                                                        </p>
                                                        <% } %>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <% } %>

                                <!-- Action Button (if still pending) -->
                                <% if (assignment.status==='submitted' ) { %>
                                    <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-6 text-center">
                                        <p class="text-gray-700 mb-4">This assignment is awaiting review</p>
                                        <a href="/professor/review/<%= assignment._id %>"
                                            class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors shadow-md">
                                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                                </path>
                                            </svg>
                                            Go to Review Page
                                        </a>
                                    </div>
                                    <% } %>

            </div>
        </div>
    </div>

    <%- include('../partials/professor/footer') %>